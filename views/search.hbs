{{> menu id="search"}}

<section class="ui segment">
    <h3 class="ui header">
        Search for Songs or Artists
    </h3>
    <form action="/search/result" method="POST">
        <div class="ui input">
            <input type="text" name="queryTerm" id="queryTerm" placeholder="Search....">
        </div>
        <button class="ui submit button">Search</button>
    </form>
    <section class="ui segment two column grid">
        <section class="column">
            <h3 class="ui header">
                <p>Songs:</p>
            </h3>
            <div class="ui list">
                {{#each tracks}}
                    <div class="item">
                        <div class="content">
                            <a href="../song/{{id}}">  {{name}}</a>
                            by {{artists.[0].name}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </section>
        <section class="column">
            <h3 class="ui header">
                <p>Artists:</p>
            </h3>
            <div class="ui list">
                {{#each artists}}
                        <div class="item">
                            <img class="ui avatar image" src="{{images.[1].url}}">
                            <div class="content">
                                <a href="../song/{{id}}">  {{name}}</a>
                            </div>
                        </div>
                {{/each}}
            </div>
        </section>
    </section>
</section>

