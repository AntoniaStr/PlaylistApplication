<section class="ui stacked segment" action="{{suggestions.playlist.id}}/addsong">
    <h2 class="ui header">
        Suggestions for you
    </h2>
        <table class="ui table">
            <thead>
            <tr>
                <th>Song</th>
                <th>Artist</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#each suggestions}}
                <tr>
                    <td>
                        <a href="../song/{{id}}">{{title}}</a>
                    </td>
                    <td>
                        {{#each artists}}
                            <p><a href="../artist/{{id}}"> {{name}}  </a></p>
                        {{/each}}
                    </td>
                    <td>
                        <form action="/song/addsong" method="POST">
                            <input type="hidden" name="artist" value="{{./artists.[0].name}}">
                            <input type="hidden" name="artistId" value="{{./artists.[0].id}}">
                            <input type="hidden" name="title" value="{{./title}}">
                            <input type="hidden" name="id" value="{{./id}}">
                           <div class="ui action input">
                                <select name="playlist" class="ui dropdown">
                                    {{#each ../playlists}}
                                            <option value="{{./id}}">{{./title}}</option>
                                    {{/each}}
                                </select>
                                <button class="ui button">
                                    <i class="icon plus"></i>
                                </button>
                            </div>
                        </form>
                    </td>
                </tr>
            {{/each}}

            </tbody>
        </table>
</section>