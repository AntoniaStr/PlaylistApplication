<table class="ui table">
  <thead>
    <tr>
      <th>Song</th>
      <th>Artist</th>
      <th>Duration</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each playlist.songs}}
      <tr>
          <td>
              <a href="../song/{{id}}">{{title}}</a>
          </td>
          <td>
              {{#each artists}}
                  <p><a href="../artist/{{id}}"> {{name}}  </a></p>
              {{/each}}
          </td>
        <td>
            <p>
                {{duration}}
            </p>
        </td>
        <td>
          <a href="/playlist/{{../playlist.id}}/deletesong/{{id}}" class="ui icon button">
            <i class="icon trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>