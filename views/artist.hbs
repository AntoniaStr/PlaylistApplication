{{> menu id="artist"}}

<section class="ui segment">
    <section class="ui segment center">
        <h1 class="ui header">
            {{artist.name}}
        </h1>

        <img src="{{artist.images.1.url}}">
        <p> Genres: <br>
            {{#each artist.genres}}
                {{#if @last}}
                    {{this}}
                {{else}}
                    {{this}},
                {{/if}}
            {{/each}}
        </p>
        <p> Followers:
            {{ artist.followers.total}}
        </p>
    </section>

    <section class="ui segment two column grid">
        <section class="column">
            <h3 class="ui header">
                <p>Popular songs:</p>
            </h3>

            <div class="ui list">
                {{#each tracks}}
                    {{#each this}}
                        <div class="item">
                            <img class="ui avatar image" src="{{album.images.1.url}}">
                            <div class="content">
                                <a href="../song/{{this.id}}"> {{this.name}}</a>
                                <div>{{album.release_date}}</div>
                            </div>
                        </div>
                    {{/each}}
                {{/each}}
            </div>
        </section>

        <section class="column">
            <h3 class="ui header">
                <p>Albums:</p>
            </h3>
            <div class="ui list">
                {{#each albums}}
                    {{#each this}}
                        <div class="item">
                            <img class="ui avatar image" src="{{images.1.url}}">
                            <div class="content">
                                <a href="../album/{{this.id}}">{{this.name}}</a>
                                <div>{{album.release_date}}</div>
                            </div>
                        </div>
                    {{/each}}
                {{/each}}
            </div>
        </section>
    </section>
</section>

